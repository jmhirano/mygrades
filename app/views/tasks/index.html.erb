<h1><%= @category.name %> Tasks</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Category</th>
    <th>Name</th>
    <th>Total</th>
    <th>Due Date</th>
    <th>Actions</th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <% category = Category.find(task.category_id) %>
  <% course = Course.find(category.course_id) %>
  <tr>
    <td><%= course.name%></td>
    <td><%= category.name %></td>
    <td><%= task.name %></td>
    <td><%= task.total %></td>
    <td><%= task.due_date.strftime("%A, %B %d, %Y at %l%p") %></td>
    <td><%= link_to 'Show', [@category,task] %></td>
    <td><%= link_to 'Edit', edit_category_task_path(@category,task) %></td>
    <td><%= link_to 'Delete', [@category,task], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_category_task_path(@category) %>
